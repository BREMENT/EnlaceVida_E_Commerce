<!DOCTYPE html>
<html lang="es">
    <title> DETALLE </title>
    <link rel='stylesheet' href='/stylesheets/products.css' />

    <!-- Include Head -->
<%- include('partials/head') %>   
<body>

<!-- Header -->
<%- include('partials/header') %>

<!-- /Header -->  
<h1><i class="fas fa-arrow-circle-left"></i><a href="/home">Home</a></h1>
<!-- product detail -->
<div class="container products-detail">
    <div class="row">
        <div class="col-12">
        </div>
    </div>
        <div class="product-detail">
            <div class="row">
                <div class="col-12 col-lg-8">
                    <h2 class="product-detail-title"><%= product.name %></h2>
                    <img src="/images/products/<%= product.image %>" alt="product image" class="<%= product.description %>">
                </div>
                <div class="product-data">
                    <article class="product-detail-info">
                                                
                            <p class="product-detail-price small">
                                <span>$<%= toThousand(product.price)%></span>
                                /
                                <b><%= product.discount %>% OFF</b>
                            </p>

                            <% if (product.discount >0) { %>
                            <p class="product-detail-price">
                                $<%= toThousand(calcFinalPrice(product) )%> 
                            </p>
                            <% } else { %>
                            <p class="product-detail-price">
                                $<%=  toThousand(product.price) %>							
                            </p>
                            <% } %>
                            <p class="product-detail-description">
                                <%= product.description %>
                            </p>
                        <ul class="actions-list">
                            <li>
                                <i class="fas fa-credit-card"></i>
                                <p>Pag√° en 12 cuotas sin interes</p>
                            </li>
                            <li>
                                <i class="fas fa-store"></i>
                                <p>Retiro gratis en locales del vendedor</p>
                            </li>
                        </ul>
                        <div class="button-box">
                            <a href="#" class="buy-now-button">Comprar Ahora</a>
                            <a href="#" class="delete-button">Agregar al carrito</a>
                        </div>
                    
                            <a href="/products/edit/<%= product.id %>" class="action-button edit">EDITAR PRODUCTO</a>
                            <form action="/products/delete/<%= product.id %>" method="POST" style="display: inline-flex">
                                <button type="submit" class="action-button delete">ELIMINAR</button>
                            </form>
                            
                    </article>
                </div>
            </div>
        </div>
</div>
<!-- /product detail -->

<!-- footer -->
<%- include('./partials/footer') %>
<!-- /footer --> 
</html>
</body>


